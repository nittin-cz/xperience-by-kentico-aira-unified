@using CMS.DataEngine;
@using Kentico.Xperience.AiraUnified;
@using Kentico.Activities.Web.Mvc;
@using System.Reflection

@{
    var baseUrl = Context.Request.GetBaseUrl();
    var version = Assembly.GetExecutingAssembly().GetName().Version?.ToString() ?? "unknown";
}
<!DOCTYPE html>
<html>
<head id="head">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="@baseUrl/_content/Kentico.Xperience.AiraUnified/css/variables.css?v=@version" rel="stylesheet" type="text/css">
    <link rel="manifest" href="@baseUrl/_content/Kentico.Xperience.AiraUnified/manifest.json">
    <link href="@baseUrl/_content/Kentico.Xperience.AiraUnified/css/style.css?v=@version" rel="stylesheet" type="text/css">
    @RenderSection("styles", required: false)

    <vc:html-header />
</head>
<body>
    <div class="page-wrapper">
        <div class="content-wrapper">
            <section class="c-section app">
                <div id="app" class="c-app aira-unified">
                    @RenderBody()
                </div>
            </section>
        </div> <!-- .content-wrapper -->
    </div> <!-- .page-wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
    <script type="module" src="@baseUrl/_content/Kentico.Xperience.AiraUnified/js/index.js?v=@version"></script>
    <vc:custom-scripts head="false" />
</body>
</html>