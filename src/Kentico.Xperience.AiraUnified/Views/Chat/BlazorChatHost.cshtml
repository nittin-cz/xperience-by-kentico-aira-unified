@using Kentico.Xperience.AiraUnified.Admin
@model BlazorChatViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no" />
    <title>AIRA Chat</title>
    <base href="/" />
    
    <!-- Přesně stejné styly jako v původním layoutu -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="@Model.BaseUrl/_content/Kentico.Xperience.AiraUnified/css/variables.css?v=@AiraUnifiedConstants.AssetVersion" rel="stylesheet" type="text/css">
    <link rel="manifest" href="@Model.BaseUrl/_content/Kentico.Xperience.AiraUnified/manifest.json">
    <link href="@Model.BaseUrl/_content/Kentico.Xperience.AiraUnified/css/style.css?v=@AiraUnifiedConstants.AssetVersion" rel="stylesheet" type="text/css">
    
    <!-- Service Worker registration -->
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/_content/Kentico.Xperience.AiraUnified/sw.js');
        }
    </script>
</head>
<body>
<div id="blazor-root">
    @(await Html.RenderComponentAsync<BlazorChatApp>(RenderMode.ServerPrerendered, new {
    Model.ThreadId,
    Model.ThreadName,
    Model.UserId,
    Model.LogoImgRelativePath,
    Model.BaseUrl
    }))
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="_framework/blazor.server.js"></script>
</body>
</html>