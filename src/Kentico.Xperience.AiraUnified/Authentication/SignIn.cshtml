@using Kentico.Xperience.AiraUnified
@using Kentico.Xperience.AiraUnified.Authentication

@model SignInViewModel

@{
    Layout = "_AiraLayout";
    var baseUrl = Context.Request.GetBaseUrl();
}

@section styles {
}

<div class="c-app_inner is-loaded" id="aira-unified-kentico-admin-signin"
    data-base-url="@baseUrl"
    data-aira-unified-base-url="@Model.PathBase"
    data-chat-url="@Model.ChatUrl">
    
    <div class="c-app_header"></div>
    <div class="c-app_body login">
        <div class="container">
            <h1 class="text-center k-dot">Sign in</h1>
            <div class="px-6 pt-6 d-flex justify-content-center">
                <button id="loginButton" type="submit" class="btn btn-outline-primary btn-lg">Continue with XbyK</button>
            </div>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="d-flex justify-content-center pt-6">
                    <div class="text-center text-danger field-validation-error">@Model.ErrorMessage</div>
                </div>
            }
        </div>
    </div>
    <div id="install-dialog"></div>
</div>

<script>
    navigator.serviceWorker.register('/_content/Kentico.Xperience.AiraUnified/sw.js')
</script>